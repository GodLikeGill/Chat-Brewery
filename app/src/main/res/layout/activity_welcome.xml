<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.WelcomeActivity"
    android:padding="32dp">

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Welcome"
        android:textSize="64dp"
        android:textColor="@color/black"
        android:fontFamily="@font/dosis" />

    <TextView
        android:id="@+id/signin_signup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/welcome_text"
        android:text="Sign In or Sign Up"
        android:textColor="@color/gray"
        android:textSize="18dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/signin_signup_text"
        android:layout_marginTop="32dp"
        android:background="@drawable/rect_100"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/sign_up"
        android:text="Sign In"
        android:background="@drawable/rect_4"
        style="@style/Button.Transparent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="12dp"
        android:text="Sign Up"
        android:background="@drawable/rect_4"
        style="@style/Button.Transparent" />

</RelativeLayout>